<p id="notice"><%= notice %></p>

<h1>Cashflows</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Description</th>
      <th>User</th>
      <th>Timestamp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cashflows.each do |cashflow| %>
      <tr>
        <td><%= cashflow.amount %></td>
        <td><%= cashflow.description %></td>
        <td><%= cashflow.user.name %></td>
        <td><%= cashflow.updated_at %></td>
        <td><%= link_to 'Show', cashflow %></td>
        <td><%= link_to 'Edit', edit_cashflow_path(cashflow) %></td>
        <td><%= link_to 'Destroy', cashflow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cashflow', new_cashflow_path %>
